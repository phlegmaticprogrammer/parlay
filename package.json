{
  "name": "hybrid-module-template",
  "version": "0.0.1",
  "description": "Template for creating a hybrid ESM/CommonJS typescript module.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "exports": {
    ".": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phlegmaticprogrammer/hybrid-module-template.git"
  },
  "author": "Steven Obua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phlegmaticprogrammer/hybrid-module-template/issues"
  },
  "homepage": "https://github.com/phlegmaticprogrammer/hybrid-module-template#readme",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "typescript": "^5.0.3"
  }  
}
